<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background ="#ff9e80"
       >

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="6px"
            android:layout_height="9px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="SAVE"
            android:textColor="#fff"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="DELETE"
            android:textColor="#fff"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">

        <TextView
        android:text="Title"
        android:textStyle="bold"
        android:id="@+id/titleFound"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
        android:text="Description"
        android:id="@+id/descriptionFound"
        android:layout_below="@+id/titleFound"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
        android:text="PubDate"
        android:id="@+id/pubDateFound"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/descriptionFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</FrameLayout>


